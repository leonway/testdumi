{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      // "@/*": ["src/*"],
      // "@@/*": ["src/.umi/*"],
      "@reamey/sort-media-upload": [
        "./packages/sort-media-upload/src/index.tsx"
      ],
      "@reamey/media-preview": ["./packages/media-preview/src/index.tsx"],
      "@reamey/provider": ["./packages/provider/src/index.tsx"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/src/**/*",
    "**/docs/**/*",
    "scripts/**/*",
    "**/demos",
    ".eslintrc.js",
    "tests",
    "jest.config.js",
    "**/fixtures",
    "./tests/no-duplicated.ts",
    "packages/descriptions/src/demos/.tsx"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ]
}
